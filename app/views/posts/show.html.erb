
<div class="d-flex align-items-center justify-content-center vh-100">
  <div class="card rounded-0 shadow mt-5 mb-5">
    <div class="card-body">
      <p><%= notice %></p>
      <% if @post.image.attached? %>
        <%= image_tag @post.image, style: "width: 400px;height:300px;" %>
      <% end %>
      <h1>Post Details</h1>
        <p><strong>Title: </strong> <%= @post.title %></p>
        <p><strong>Description: </strong><%= @post.description %></p>


        <% if @post.user_id == current_user.id %>
          <%= link_to "edit post", edit_post_path(@post), class: "btn btn-primary" %>
          <%= link_to "Destroy", post_path(@post), data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
          },class: "btn btn-primary"%>
        <% end %>

        <h2>Comments</h2>
        <%= render @post.comments %>

        <h2>Add a comment:</h2>
        <%= render 'comments/form' %>

        <%= link_to 'Back', posts_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
